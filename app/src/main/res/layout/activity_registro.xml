<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiomi.musiclink.Registro"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Estás muy cerca de formar parte de MusicLink!"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre completo:"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/eteRegistroNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_perfil"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo electrónico:"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/eteRegistroCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_perfil"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña:"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/eteRegistroPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_perfil"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar Contraseña:"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/eteRegistroConfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_perfil"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento:"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/butRegistroDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DD"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#ffffff"
                android:layout_marginBottom="5dp"/>

            <EditText
                android:id="@+id/butRegistroMes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:textColor="#ffffff"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/butRegistroAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="YYYY"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:inputType="number"/>

        </LinearLayout>

        <Button
            android:id="@+id/butIniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iniciar Sesión"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_round"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp" />

    </LinearLayout>

</LinearLayout>
