<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiomi.musiclink.Perfil"
    android:orientation="vertical"
    android:background="#000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <Button
            android:id="@+id/butEditarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver y editar perfil"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_round"/>

        <Button
            android:id="@+id/butPerfilNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notificaciones"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>

        <Button
            android:id="@+id/butPerfilCredito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CrÃ©dito y cupones"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>
        <Button
            android:id="@+id/butPerfilInvitar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invitar amigos"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>
        <Button
            android:id="@+id/butPerfilPagos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pagos"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>
        <Button
            android:id="@+id/butPerfilUsarComo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usar como musico"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>
        <Button
            android:id="@+id/butPerfilConfiguracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configuracion"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>
        <Button
            android:id="@+id/butPerfilAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Obtener ayuda"
            android:textAllCaps="false"
            android:layout_marginTop="0dp"
            android:textColor="#ffffff"
            android:background="@drawable/button_perfil"/>


    </LinearLayout>




</LinearLayout>
